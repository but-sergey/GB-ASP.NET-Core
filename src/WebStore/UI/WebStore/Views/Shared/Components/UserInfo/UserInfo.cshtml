        {
            <li><a asp-area="Admin" asp-controller="Home" asp-action="Index">
                    <i class="fa fa-keyboard-o"></i> Admin Panel
                </a>
            </li>
        }
        <li><a asp-controller="UserProfile" asp-action="Index"><i class="fa fa-user"></i> @User.Identity!.Name</a></li>
        <li><a asp-controller="Cart" asp-action="Index"><i class="fa fa-shopping-cart"></i> Cart</a></li>
        <li><a asp-controller="Account" asp-action="Logout"><i class="fa fa-lock"></i> Logout</a></li>
    </ul>
</div>
